<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- Dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>

		<!-- Localhost connection -->
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>

		<property name="show_sql">true</property>
		<!-- Mapping -->
		<mapping class="com.codepump.data.CodeItem"></mapping>
		<mapping class="com.codepump.data.User"></mapping>
		<mapping class="com.codepump.tempobject.RecentItem"></mapping>
		<mapping class="com.codepump.tempobject.SearchItem"></mapping>
		<mapping class="com.codepump.tempobject.MyStuffListItem"></mapping>
		<mapping class="com.codepump.tempobject.UserLanguageStatisticsItem"></mapping>
	</session-factory>
</hibernate-configuration>